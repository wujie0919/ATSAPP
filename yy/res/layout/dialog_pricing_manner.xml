<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:alpha="0.8"
            android:background="@color/white"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_time_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="27dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:paddingTop="27dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/time_share" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分时用车"
                    android:textColor="@color/text_3d3f42"
                    android:textSize="@dimen/textsize_28px" />

                <TextView
                    android:id="@+id/tv_time_share_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/textview"
                    android:textColor="@color/text_3d3f42"
                    android:textSize="@dimen/textsize_24px" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_time_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/right_green" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/line_eeeeee" />

        <LinearLayout
            android:id="@+id/ll_day_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="27dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:paddingTop="27dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/day_share" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="按日用车"
                    android:textColor="@color/text_3d3f42"
                    android:textSize="@dimen/textsize_28px" />

                <TextView
                    android:id="@+id/tv_day_share_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/textview"
                    android:textColor="@color/text_3d3f42"
                    android:textSize="@dimen/textsize_24px" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_day_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/right_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:alpha="0.8"
            android:background="@color/white"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/close" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>