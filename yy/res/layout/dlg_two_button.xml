<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mapcarfrg_reminddlg_bg">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="25dp"
            android:text="标题"
            android:textColor="@color/text_3d3f42"
            android:textSize="@dimen/textsize_30px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="内容内容内容内容内容内容"
            android:textColor="@color/text_3d3f42"
            android:textSize="@dimen/textsize_26px" />

        <View
            android:id="@+id/v_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_content"
            android:layout_marginTop="25dp"
            android:background="@color/line_eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/v_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mapcarfrg_reminddlg_leftbutton_selector"
                android:gravity="center"
                android:text="左按钮"
                android:textColor="@color/text_a6a6a6"
                android:textSize="@dimen/textsize_30px" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/line_eeeeee" />

            <TextView
                android:id="@+id/tv_right_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mapcarfrg_reminddlg_rightbutton_selector"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="右按钮"
                android:textColor="@color/titlebar_background"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>