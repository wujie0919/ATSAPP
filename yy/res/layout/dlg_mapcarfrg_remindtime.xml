<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mapcarfrg_reminddlg_bg">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="25dp"
            android:text="请选择提示时间"
            android:textColor="@color/text_3d3f42"
            android:textSize="@dimen/textsize_30px"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_times"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/mapcarfrg_time_selector"></View>

                <TextView
                    android:id="@+id/tv_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="1小时"
                    android:textColor="@color/text_3d3f42"
                    android:textSize="@dimen/textsize_26px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/mapcarfrg_time_selector"></View>

                <TextView
                    android:id="@+id/tv_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="adfadf"
                    android:textColor="@color/text_3d3f42"
                    android:textSize="@dimen/textsize_26px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/mapcarfrg_time_selector"></View>

                <TextView
                    android:id="@+id/tv_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="adfadf"
                    android:textColor="@color/text_3d3f42"
                    android:textSize="@dimen/textsize_26px" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/v_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_times"
            android:layout_marginTop="25dp"
            android:background="@color/line_eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/v_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mapcarfrg_reminddlg_leftbutton_selector"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/text_a6a6a6"
                android:textSize="@dimen/textsize_30px" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/line_eeeeee" />

            <TextView
                android:id="@+id/tv_right_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mapcarfrg_reminddlg_rightbutton_selector"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="确认"
                android:textColor="@color/titlebar_background"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>