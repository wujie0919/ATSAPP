<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:background="@color/white"
        android:visibility="visible">

        <View
            android:id="@+id/v_nocaricon_icon"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/icon_map_car_toast" />

        <TextView
            android:id="@+id/tv_remindmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_nocaricon_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:textSize="@dimen/textsize_26px" />

        <LinearLayout
            android:id="@+id/ll_nocar_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancelremindme"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/mapcarfrg_nocar_remind_cancel_bg_selector"
                android:gravity="center"
                android:text="取消提醒设置"
                android:textColor="@color/text_3d3f42"
                android:textSize="@dimen/textsize_28px" />

            <TextView
                android:id="@+id/tv_mindhavecarstation"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/mapcarfrg_havecarremind_bg_selector"
                android:gravity="center"
                android:text="看看有车站点"
                android:textColor="@color/titlebar_background"
                android:textSize="@dimen/textsize_28px" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_hight"
            android:background="@color/line_dddddd"></View>
    </RelativeLayout>
</LinearLayout>