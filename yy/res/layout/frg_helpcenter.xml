<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_title"
        layout="@layout/title_lay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgcolor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_remind"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="用车早知道，出行少烦恼~"
                android:textColor="@color/text_3d3f42"
                android:textSize="@dimen/textsize_28px" />


            <LinearLayout
                android:id="@+id/ll_block"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/tv_remind"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_rentprocess"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/helpcenter_rentprocess_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="租车流程"
                            android:textColor="@color/text_3d3f42"
                            android:textSize="@dimen/textsize_26px" />
                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/line_hight_0_5"
                        android:layout_height="45dp"
                        android:background="@color/line_eeeeee"></View>

                    <RelativeLayout
                        android:id="@+id/rl_price"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/helpcenter_price_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="计价说明"
                            android:textColor="@color/text_3d3f42"
                            android:textSize="@dimen/textsize_26px" />
                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/line_hight_0_5"
                        android:layout_height="45dp"
                        android:background="@color/line_eeeeee"></View>

                    <RelativeLayout
                        android:id="@+id/rl_norquestion"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/helpcenter_norquestion_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="常见问题"
                            android:textColor="@color/text_3d3f42"
                            android:textSize="@dimen/textsize_26px" />

                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/line_hight_0_5"
                        android:layout_height="45dp"
                        android:background="@color/line_eeeeee"></View>

                    <RelativeLayout
                        android:id="@+id/rl_opration"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/helpcenter_oprate_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="还车说明"
                            android:textColor="@color/text_3d3f42"
                            android:textSize="@dimen/textsize_26px" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/line_eeeeee"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_duty_detail"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/duty_detail" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="租车协议"
                            android:textColor="@color/text_3d3f42"
                            android:textSize="@dimen/textsize_26px" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="3" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvbrandnametag"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/ll_block"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="用车指导"
                android:textColor="@color/text_3d3f42"
                android:textSize="@dimen/textsize_26px" />

            <LinearLayout
                android:id="@+id/ll_brands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvbrandnametag"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="20dp"></LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>