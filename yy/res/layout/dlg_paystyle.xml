<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mapcarfrg_reminddlg_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:gravity="center"
        android:text="请选择支付账户"
        android:textColor="@color/text_a6a6a6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_eeeeee" />

    <LinearLayout
        android:id="@+id/pay_dialog_company_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_times"
        android:background="@color/line_eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/v_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mapcarfrg_reminddlg_leftbutton_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_a6a6a6"
            android:textSize="@dimen/textsize_30px" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/line_eeeeee" />

        <TextView
            android:id="@+id/tv_right_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mapcarfrg_reminddlg_rightbutton_selector"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="确认"
            android:textColor="@color/titlebar_background"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>