<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/time_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_point_top"
                android:layout_width="10dp"
                android:layout_height="3.5dp"
                android:layout_gravity="right"
                android:background="@color/bgcolor"
                android:visibility="visible"></TextView>

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/orderlist_item_point" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="2015-11-23  19:00：35"
            android:textColor="@color/text_a6a6a6"
            android:textSize="@dimen/textsize_24px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_prepart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_lay"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/myruns_item_bg"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_completestatu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="已完成"
                android:textColor="@color/titlebar_background"
                android:textSize="@dimen/textsize_28px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ordernumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="订单编号：12341241"
                android:textColor="@color/text_a6a6a6"
                android:textSize="@dimen/textsize_28px" />
        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/line_eeeeee" />

        <TextView
            android:id="@+id/tv_carnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="租用车辆：比亚迪 E6 京 QZ2F08"
            android:textColor="@color/text_a6a6a6"
            android:textSize="@dimen/textsize_26px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_travelmileage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="行驶里程：15.12公里"
                android:textColor="@color/text_a6a6a6"
                android:textSize="@dimen/textsize_26px" />

            <TextView
                android:id="@+id/tv_travetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:text="行驶时间：2小时03分"
                android:textColor="@color/text_a6a6a6"
                android:textSize="@dimen/textsize_26px" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="用车费用 xx元"
            android:textColor="@color/text_a6a6a6"
            android:textSize="@dimen/textsize_26px" />
    </LinearLayout>

</RelativeLayout>