<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical|left"
            android:padding="10dp"
            android:text="取消"
            android:textColor="#575757" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/titlebar_background" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.dzrcx.jiaan.widget.wheel.widget.WheelView
            android:id="@+id/wv_area_province"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.dzrcx.jiaan.widget.wheel.widget.WheelView>

        <com.dzrcx.jiaan.widget.wheel.widget.WheelView
            android:id="@+id/wv_area_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.dzrcx.jiaan.widget.wheel.widget.WheelView>

        <com.dzrcx.jiaan.widget.wheel.widget.WheelView
            android:id="@+id/wv_area_county"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.dzrcx.jiaan.widget.wheel.widget.WheelView>
    </LinearLayout>
</LinearLayout>