<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_title"
        layout="@layout/title_lay" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingLeft="28dip"
            android:paddingRight="28dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付金额"
                android:textColor="#525b62"
                android:textSize="@dimen/textsize_26px" />

            <TextView
                android:id="@+id/tv_truemoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0 元"
                android:textColor="@color/titlebar_background"
                android:textSize="@dimen/textsize_26px"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_zhifubao"
        android:layout_width="match_parent"
        android:layout_height="64dip"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_click_bg"
        android:clickable="true"
        android:paddingLeft="28dip"
        android:paddingRight="28dip">

        <ImageView
            android:id="@+id/icon_zhifubao"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_centerVertical="true"
            android:src="@drawable/zhifubao" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon_zhifubao"
            android:orientation="vertical"
            android:paddingLeft="12dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="top"
                android:text="支付宝支付"
                android:textColor="#525b62"
                android:textSize="@dimen/textsize_26px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:text="推荐使用"
                android:textColor="#b4b8bb"
                android:textSize="@dimen/textsize_26px" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_usergo" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/sp_line" />

    <RelativeLayout
        android:id="@+id/rl_weixin"
        android:layout_width="match_parent"
        android:layout_height="64dip"
        android:background="@drawable/item_click_bg"
        android:clickable="true"
        android:paddingLeft="28dip"
        android:paddingRight="28dip">

        <ImageView
            android:id="@+id/icon_weixin"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_centerVertical="true"
            android:src="@drawable/weixin" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon_weixin"
            android:orientation="vertical"
            android:paddingLeft="12dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="top"
                android:text="微信支付"
                android:textColor="#525b62"
                android:textSize="@dimen/textsize_26px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:text="微信安全支付"
                android:textColor="#b4b8bb"
                android:textSize="@dimen/textsize_26px" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_usergo" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/sp_line" />
</LinearLayout>