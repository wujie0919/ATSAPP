<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="15dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="15dp">

        <RelativeLayout
            android:id="@+id/rl_carimg"
            android:layout_width="140dp"
            android:layout_height="94dp"
            android:background="@drawable/mapcarfrg_top_location_bg_nor">

            <com.dzrcx.jiaan.widget.RoundCornersImageViewAll
                android:id="@+id/rc_carimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/line_hight_0_5"
                android:scaleType="centerInside"
                android:src="@drawable/carlistnocar"
                app:roundHeight="3dp"
                app:roundWidth="3dp" />

            <View
                android:id="@+id/v_gavestyle"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/line_hight_0_5"
                android:layout_marginTop="@dimen/line_hight_0_5"></View>
        </RelativeLayout>

        <LinearLayout


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></LinearLayout>

        <TextView
            android:id="@+id/tv_remindme"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/mapcarfrg_havecarremind_bg_selector"
            android:gravity="center"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="有车提醒我"
            android:textColor="@color/titlebar_background"
            android:textSize="@dimen/textsize_24px" />

        <TextView
            android:id="@+id/tv_cancelremindme"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/mapcarfrg_nocar_remind_cancel_bg_selector"
            android:gravity="center"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="取消提醒设置"
            android:textColor="@color/text_3d3f42"
            android:textSize="@dimen/textsize_24px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line_eeeeee"></View>
</RelativeLayout>