<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_title"
        layout="@layout/title_lay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dip"
                android:layout_marginTop="23dip"
                android:gravity="center">

                <ImageView
                    android:id="@+id/rated_car_image"
                    android:layout_width="84dip"
                    android:layout_height="56dip"
                    android:background="@color/line_eeeeee"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_ratedus_def_car" />


                <TextView
                    android:id="@+id/rated_carmode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@+id/rated_car_image"
                    android:text="奇瑞eQ"
                    android:textColor="@color/text_3d3f42"
                    android:textSize="@dimen/textsize_30px" />


                <TextView
                    android:id="@+id/rated_carno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/rated_carmode"
                    android:text="京Q12345"
                    android:textColor="@color/text_3d3f42"
                    android:textSize="@dimen/textsize_30px" />


                <TextView
                    android:id="@+id/rated_spendtime"
                    android:layout_width="wrap_content"
                    android:layout_height="16dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@+id/rated_car_image"
                    android:background="@drawable/mapcarfrg_fastrentcar_nor"
                    android:gravity="center"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip"
                    android:text="2时20分"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_22px" />

                <TextView
                    android:id="@+id/ratedr_left"
                    android:layout_width="wrap_content"
                    android:layout_height="16dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/rated_spendtime"
                    android:background="@drawable/mapcarfrg_fastrentcar_nor"
                    android:gravity="center"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip"
                    android:text="2时20分"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_22px" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dip"
                android:layout_marginRight="37dip"
                android:layout_marginTop="25dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <View
                    android:layout_width="0dip"
                    android:layout_height="1px"
                    android:layout_weight="1"
                    android:background="@color/stroke_cccccc" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip"
                    android:text="支付成功"
                    android:textColor="@color/text_a6a6a6"
                    android:textSize="@dimen/textsize_22px" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="1px"
                    android:layout_weight="1"
                    android:background="@color/stroke_cccccc" />

            </LinearLayout>


            <TextView
                android:id="@+id/rated_pay_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:gravity="center"
                android:text="￥102.72"
                android:textColor="@color/titlebar_background"
                android:textSize="@dimen/textsize_44px" />


            <TextView
                android:id="@+id/rated_pay_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dip"
                android:text="查看详情>"
                android:textColor="@color/text_a6a6a6"
                android:textSize="@dimen/textsize_24px" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dip"
                android:layout_marginRight="37dip"
                android:layout_marginTop="25dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <View
                    android:layout_width="0dip"
                    android:layout_height="1px"
                    android:layout_weight="1"
                    android:background="@color/stroke_cccccc" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip"
                    android:text="行程评价"
                    android:textColor="@color/text_a6a6a6"
                    android:textSize="@dimen/textsize_22px" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="1px"
                    android:layout_weight="1"
                    android:background="@color/stroke_cccccc" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dip"
                android:text="您的评价，让我们做的更好"
                android:textColor="@color/text_3d3f42"
                android:textSize="@dimen/textsize_26px" />


            <LinearLayout
                android:id="@+id/rated_star_layout"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="37dip"
                android:layout_marginRight="37dip"
                android:layout_marginTop="17dip"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/rated_star0"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:background="@drawable/yyratingbar_style1" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/rated_star1"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:background="@drawable/yyratingbar_style1" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/rated_star2"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:background="@drawable/yyratingbar_style1" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/rated_star3"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:background="@drawable/yyratingbar_style1" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/rated_star4"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:background="@drawable/yyratingbar_style1" />


            </LinearLayout>

            <com.dzrcx.jiaan.widget.NoScrollGridView
                android:id="@+id/massagegridview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="17dp"
                android:horizontalSpacing="5dp"
                android:numColumns="2"
                android:scrollbars="none"
                android:verticalSpacing="5dp" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/rated_button"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:layout_marginTop="17dip"
        android:background="@drawable/mapcarfrg_fastrentcar_pre"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_30px" />


</RelativeLayout>