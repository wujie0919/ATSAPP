<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="115dip"
            android:layout_height="40dip"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="115dip"
            android:layout_height="43dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num_info_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="-22.5dp"
                android:background="@drawable/icon_garage_bg"
                android:gravity="center_vertical"
                android:paddingLeft="48dp"
                android:text="共有3辆车可租"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_20px" />

        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/carstation_icon_y" />

        <com.dzrcx.jiaan.widget.SquareRelativeLayout
            android:id="@+id/csrl_car_number"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="7.5dp"
            android:layout_marginTop="5.5dp">

            <TextView
                android:id="@+id/tv_car_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="88"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16px" />

        </com.dzrcx.jiaan.widget.SquareRelativeLayout>
    </RelativeLayout>

</RelativeLayout>