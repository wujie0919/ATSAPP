<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_title"
        layout="@layout/title_lay" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="47dip"
        android:gravity="center"
        android:text="请准确填写以下信息，以便于身份信息验证成功"
        android:textColor="@color/text_a6a6a6"
        android:textSize="@dimen/textsize_25px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dip"
            android:gravity="center"
            android:text="真实姓名"
            android:textColor="@color/text_3d3f42"
            android:textSize="@dimen/textsize_32px" />

        <EditText
            android:id="@+id/transfertwo_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入真实姓名"
            android:paddingLeft="22dip"
            android:singleLine="true"
            android:textColor="@color/text_3d3f42"
            android:textColorHint="@color/text_a6a6a6"
            android:textSize="@dimen/textsize_27px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dip"
            android:gravity="center"
            android:text="身份证号"
            android:textColor="@color/text_3d3f42"
            android:textSize="@dimen/textsize_32px" />

        <EditText
            android:id="@+id/transfertwo_sfz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入身份证号"
            android:maxLength="18"
            android:paddingLeft="22dip"
            android:singleLine="true"
            android:textColor="@color/text_3d3f42"
            android:textColorHint="@color/text_a6a6a6"
            android:textSize="@dimen/textsize_27px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dip"
            android:gravity="center"
            android:text="领证日期"
            android:textColor="@color/text_3d3f42"
            android:textSize="@dimen/textsize_32px" />

        <TextView
            android:id="@+id/transfertwo_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="请选择驾驶证初次领证日期"
            android:paddingLeft="22dip"
            android:textColor="@color/text_3d3f42"
            android:textColorHint="@color/text_a6a6a6"
            android:textSize="@dimen/textsize_27px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f4f4f4" />


    <TextView
        android:id="@+id/transfertwo_next"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_38px" />

</LinearLayout>